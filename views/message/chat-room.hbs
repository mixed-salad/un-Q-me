<h1>Messages to {{receiver.name}}</h1>
{{#each messages}}

<p class="sender-{{sender}}"> {{messageBody}}</p>


{{/each}}



<form method="POST">
    <label for="input-message">New Message </label>
    <textarea id="message" name="message" rows="5" cols="33"> Your message to {{receiver.name}}  </textarea>
    <button id="send" class="btn-form">Send</button>
</form>